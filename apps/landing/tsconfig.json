{
  "compilerOptions": {
   "target": "ES2019",                   // Set the JavaScript version the code will compile to.
    "module": "CommonJS",                 // Specify the module system, common for Node.js.
    "rootDir": "./src",                   // Specify the root directory of input files.
    "outDir": "./dist",                   // Specify the output directory for compiled files.
    "esModuleInterop": true,              // Enables interop between CommonJS and ES modules.
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in module imports.
    "strict": true,                       // Enable all strict type-checking options.
    "skipLibCheck": true,                 // Skip type checking of all declaration files.
    "resolveJsonModule": true,            // Enable importing .json files.
    "moduleResolution": "node",           // Use Node's module resolution algorithm.
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export.
    "strictNullChecks": true,             // Enable strict null checks.
    "noImplicitAny": true,                // Raise an error on expressions and declarations with an implied 'any' type.
    "baseUrl": ".",   
  },
}
